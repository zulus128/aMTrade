<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:background="@android:color/transparent" android:layout_width="0dip"
    android:paddingLeft="3dp" android:layout_height="30dip"
    >

<TextView 
android:layout_width="40dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="left"
android:id="@+id/HistoryType">
</TextView>

<TextView 
android:layout_width="40dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="center"
android:id="@+id/HistoryName">
</TextView>

<TextView 
android:layout_width="20dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="center"
android:id="@+id/HistoryDirect">
</TextView>

<TextView 
android:layout_width="60dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/HistoryPrice">
</TextView>

<TextView 
android:layout_width="60dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/HistoryQty">
</TextView>

<TextView 
android:layout_width="20dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/HistoryStatus">
</TextView>

<TextView 
android:layout_width="80dip" 
android:layout_height="fill_parent" 
android:textSize="12dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/HistoryDate">
</TextView>

</LinearLayout>