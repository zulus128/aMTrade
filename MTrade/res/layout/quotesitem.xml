<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:background="@android:color/transparent" android:layout_width="0dip" 
    android:paddingLeft="3dp" android:layout_height="30dip"
    >

<TextView 
android:layout_width="90dip" 
android:layout_height="fill_parent" 
android:textSize="16dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:id="@+id/QuoteBidQ">
</TextView>

<TextView 
android:layout_width="80dip" 
android:layout_height="fill_parent" 
android:textSize="16dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/QuotePrice">
</TextView>

<TextView 
android:layout_width="130dip" 
android:layout_height="fill_parent" 
android:textSize="16dp"
android:textColor="#000000" android:textStyle="bold"
android:layout_gravity="center_vertical"
android:gravity="right"
android:id="@+id/QuoteSellQ">
</TextView>

</LinearLayout>