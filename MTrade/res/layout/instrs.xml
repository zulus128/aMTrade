<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/SlateGray" >

    <LinearLayout
        android:id="@+id/LinLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkGray"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                style="@style/CodeFont1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.22"
                android:paddingLeft="4dp"
                android:text="@string/TitleInstr"
                android:textStyle="bold" >
            </TextView>

            <TextView
                style="@style/CodeFont1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.12"
                android:gravity="center_horizontal"
                android:text="@string/TitleStatus"
                android:textStyle="bold" >
            </TextView>

            <TextView
                style="@style/CodeFont1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.22"
                android:gravity="right"
                android:text="@string/TitleChg"
                android:textStyle="bold" >
            </TextView>

            <TextView
                style="@style/CodeFont1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.22"
                android:gravity="right"
                android:text="@string/TitleBuy"
                android:textStyle="bold" >
            </TextView>

            <TextView
                style="@style/CodeFont1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.22"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="@string/TitleSell"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <ListView
            android:id="@+id/InstrList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:paddingBottom="5dp"
            android:paddingTop="0dp" >
        </ListView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ProgressBar01"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" >
    </ProgressBar>

</RelativeLayout>