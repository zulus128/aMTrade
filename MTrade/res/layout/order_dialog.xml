<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customorderdialog"
    android:layout_width="200dip"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/orderlayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
	    android:padding="7dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ordertext"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:text="@string/OrderDialogInstrument"
            android:textColor="#FFFFFF" />
    
    <TextView android:id="@+id/instrtext"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFF"
              android:layout_width="50dip" 
              />
    
	</LinearLayout>
    
    <LinearLayout
    android:id="@+id/orderlayout2" android:orientation="horizontal"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="7dp"
    >
    
        
    <TextView android:id="@+id/pricetext"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFF"
              android:layout_width="100dip" 
              android:text="@string/Price"
              />
    
    <EditText 	android:id="@+id/priceedit"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				/>
    
	</LinearLayout>
    
    <LinearLayout
    android:id="@+id/orderlayout3" android:orientation="horizontal"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@android:color/transparent">
    
        
    <TextView android:id="@+id/quanttext"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFF"
              android:layout_width="100dip" 
              android:text="@string/Quantity"
              />
    
    <EditText 	android:id="@+id/quantedit"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				/>
    
	</LinearLayout>
        
        <Spinner
        android:id="@+id/acc_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/BuyButton" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SellButton" />


    </RadioGroup>

<Button
android:id="@+id/putorder"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/PutOrder"
/>
    
</LinearLayout>