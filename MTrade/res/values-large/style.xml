<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CodeFont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CodeFont1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="CodeFontHist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="CodeFontHist1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CodeFontPos">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Wheat</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="CodeFontOrder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="CodeFontSel1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/Yellow</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CodeFontSel2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>